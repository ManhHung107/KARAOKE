@model KARAOKE.Models.EF.LoaiPhong

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="forms">
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-grids row widget-shadow" data-example-id="basic-forms">
            <div class="form-title">
                <h4>Thêm mới loại phòng</h4>
            </div>
            <div class="form-body">
                @using (Html.BeginForm("Create", "LoaiPhong", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", "error")
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên loại phòng</label>
                        @Html.TextBoxFor(model => model.TenLoaiPhong, new { @class = "form----", @placeholder = "Nhập tên loại phòng", @autoforcus = "autoforcus" })
                        @Html.ValidationMessageFor(model => model.TenLoaiPhong, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Đơn giá</label>
                        @Html.TextBoxFor(model => model.DonGia, new { @class = "form----", @placeholder = "Nhập đơn giá" })
                        @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-default">Thêm mới</button>
                }
            </div>
        </div>
    </div>
</div>

