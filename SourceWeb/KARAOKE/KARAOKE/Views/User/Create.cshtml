@model KARAOKE.Models.EF.NhanVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="forms">
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-grids row widget-shadow" data-example-id="basic-forms">
            <div class="form-title">
                <h4>Thêm mới người dùng</h4>
            </div>
            <div class="form-body">
                @using (Html.BeginForm("Create", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", "error")
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tài khoản</label>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form----", @placeholder = "Nhập tên tài khoản", @autoforcus = "autoforcus" })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form----", @placeholder = "Nhập mật khẩu" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Họ và tên</label>
                        @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form----", @placeholder = "Nhập họ và tên" })
                        @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Số điện thoại</label>
                        @Html.TextBoxFor(model => model.DienThoai, new { @class = "form----", @placeholder = "Nhập số điện thoại" })
                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Địa chỉ</label>
                        @Html.TextBoxFor(model => model.DiaChi, new { @class = "form----", @placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Quản trị viên ? </label>
                        @Html.CheckBoxFor(model => model.isAdmin, new { htmlAttributes = new { @class = "checkbox----", } })
                        @Html.ValidationMessageFor(model => model.isAdmin, "", new { @class = "text-danger" })
                    </div> <button type="submit" class="btn btn-default">Thêm</button>
                }
            </div>
        </div>
    </div>
</div>

